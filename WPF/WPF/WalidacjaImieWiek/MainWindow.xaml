<Window x:Class="WalidacjaImieWiek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalidacjaImieWiek"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400"  FontSize="20" Name="OknoGlowne">
    <StackPanel>
        <Label Content="Podaj Imie:" Margin="5"/>
        <TextBox x:Name="TextBoxImie" Text="{Binding ElementName=OknoGlowne, Path=Imie}"/>
        <Label Content="Podaj wiek:" Margin="5"/>
        <TextBox x:Name="TextBoxWiek" Text="{Binding ElementName=OknoGlowne, Path=Wiek}"/>
        <Button x:Name="Sprawdz" Content="Sprawdz" Margin="0,10,0,5" Click="Sprawdz_Click"/>
        <Button x:Name="SprawdzBinding" Content="Sprawdz (Binding)" Command="{Binding ElementName=OknoGlowne, Path=SprawdzButtonCommand}"/>
        <TextBlock x:Name="CzyPoprawneDane" Text="{Binding ElementName=OknoGlowne, Path=CzyPoprawne}" 
                   Foreground="{Binding ElementName=OknoGlowne, Path=Color}"/>
        <TextBlock x:Name="CzyPelnoletni" Text="{Binding ElementName=OknoGlowne, Path=CzyLetni}"/>
    </StackPanel>
</Window>
