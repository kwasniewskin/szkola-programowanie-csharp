@model List<PersonDTO>

<h1>Lista wszystkich osób</h1>

<table class="table table-striped">
    <tr>
        <td>Imie</td>
        <td>Nazwisko</td>
        <td>Wiek</td>
        <td>Edycja</td>
        <td>Usuwanie</td>
    </tr>

    @foreach (PersonDTO item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td>@Html.ActionLink("Edytuj", "EditPerson", "People", new { id = item.Id})</td>
            <td>@Html.ActionLink("Usun", "DeletePerson", "People", new { id = item.Id})</td>
        </tr>
    }
</table>

<a asp-controller="People" asp-action="CreatePerson">Dodaj Osobe</a>