@model List<PersonDTO>

@using(Html.BeginForm("SearchPerson", "People", FormMethod.Get))
{
    <div>
        Imie: @Html.TextBox("name")
        <input type="submit" value="szukaj"/>
    </div>
}

<h1>Lista wyszukanych osób</h1>

<table class="table table-striped">
    <tr>
        <td>Imie</td>
        <td>Nazwisko</td>
        <td>Wiek</td>
    </tr>

    @foreach (PersonDTO item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
        </tr>
    }
</table>